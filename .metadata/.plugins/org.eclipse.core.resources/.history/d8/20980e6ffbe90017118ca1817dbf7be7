
public class Main {
	public static void main(String[] args){
		Hero h1;
		h1=new Hero();
		h1.name="a";
		h1.hp=100;

		Hero h2=new Hero();
		h2.name="b";
		h2.hp=100;

		Wizard w=new Wizard();
		w.name="c";
		w.hp=50;

		Matango m1=new Matango();
		m1.hp=50;
		m1.suffix='A';

		Matango m2=new Matango();
		m2.hp=48;
		m2.suffix='B';

		System.out.println("勇者"+h1.name+"を生み出しました");
		h1.sit(5);
		h1.slip();
		h1.sit(25);
		w.heal(h1);
		w.heal(h2);
		w.heal(h2);
		m1.run();
		m2.run();
		h1.run();
	}
}
